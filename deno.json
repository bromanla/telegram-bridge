{
  "workspace": [
    "libs/common",
    "libs/bus",
    "apps/contract",
    "apps/telegram"
  ],
  "tasks": {
    "dev:telegram": "deno --allow-all --env --watch --check --inspect apps/telegram/src/index.ts",
    "compile:telegram": "deno --allow-all --output=bin/telegram apps/telegram/src/index.ts"
  },
  "imports": {
    "@std/io": "jsr:@std/io@^0.225.0",
    "zod": "https://deno.land/x/zod@v3.23.8/mod.ts"
  },
  "compilerOptions": {
    "strictPropertyInitialization": false
  },
  "lint": {
    "rules": {
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  }
}
