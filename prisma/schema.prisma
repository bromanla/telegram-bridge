generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id
  first_name String?
  last_name  String?
  full_name  String
  group      Boolean?
  forum      Forum[]
}

model Chat {
  id    Int     @id
  title String
  forum Forum[]
}

model Forum {
  id   Int    @id
  name String

  chat   Chat? @relation(fields: [chatId], references: [id])
  chatId Int?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}
